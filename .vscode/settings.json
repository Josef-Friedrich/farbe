{
  "files.exclude": {
    "**/_minted*/": true,
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.hd": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.toc": true
  },
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    "${3rd}/busted/library",
    "${3rd}/luaassert/library",
    "~/repos/tex/lua-api/library"
  ],
  "latex-workshop.latex.autoBuild.run": "never",
  "[lua]": {
    "editor.defaultFormatter": "Koihik.vscode-lua-format"
  },
}
