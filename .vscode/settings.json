{
  // https://github.com/sumneko/lua-language-server/wiki/Libraries
  "Lua.workspace.library": [
    // https://github.com/sumneko/lua-language-server/tree/master/meta/3rd
    "${3rd}/busted/library",
    // https://github.com/Josef-Friedrich/luatex-lua-library
    "~/repos/tex/luatex-lua-library/luatex"
  ],
  "files.exclude": {
    "**/_minted*/": true,
    "**/*.aux": true,
    "**/*.fdb_latexmk": true,
    "**/*.fls": true,
    "**/*.glo": true,
    "**/*.hd": true,
    "**/*.idx": true,
    "**/*.ilg": true,
    "**/*.ind": true,
    "**/*.log": true,
    "**/*.out": true,
    "**/*.pdf": true,
    "**/*.synctex.gz": true,
    "**/*.toc": true
  }
}
